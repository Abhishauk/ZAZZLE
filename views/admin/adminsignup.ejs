<html>
<body>
 
    <div class="container py-4">
      <div class="row justify-content-center align-items-center ">
        <div class="col-md-6 col-lg-5 ">
          <h1 class="font-weight-bold text-5 mb-0 mt-1 text-center">Cotton Candy</h1>
          <h2 class="font-weight-bold text-5 mb-0 mt-2 text-center">Register</h2>
          <form action="/admin/signuppost" id="signup-form" method="post">
            <div class="row">
              <div class="form-group col">
                <div class="row mt-3">

          
                </div>

                <label class="form-label text-color-dark text-3 mt-3">Name
                  <span class="text-color-danger">*</span></label>
                <input id="username" type="text" value="" name="username" class="form-control form-control-lg text-4" />
              </div>
              <span class="text-danger d-none" style="font-size: 12px; margin-left: 10px;" id="usernameError"></span>
            </div>
          
            <div class="row">
              <div class="form-group col">
                <label class="form-label text-color-dark text-3 mt-3">Mobile no
                  <span class="text-color-danger">*</span></label>
                <input id="phonenumber" type="text" value="" name="mobile" class="form-control form-control-lg text-4" />
              </div>
              <span class="text-danger d-none" style="font-size: 12px; margin-left: 10px;" id="phonenumberError"></span>
            </div>
            <div class="row">
              <div class="form-group col">
                <label class="form-label text-color-dark text-3">Password <span
                    class="text-color-danger">*</span></label>
                <input id="password" type="password" value="" name="password"
                  class="form-control form-control-lg text-4"/>
              </div>
              <span class="text-danger d-none" style="font-size: 12px; margin-left: 10px;" id="passwordError"></span>
            </div>
         

            

            <div class="row">
              <div class="form-group col">
                <p class="text-2 mb-2">

                   <a href="#" class="text-decoration-none">privacy policy.</a> 
                </p>
              </div>
            </div>
            <div class="row">
              <div class="form-group col">
                <button type="submit"
                  class="btn btn-dark btn-modern w-100 text-uppercase rounded-0 font-weight-bold text-3 py-3"
                  data-loading-text="Loading...">
                  Register
                </button>
                <div class="form-group col-md-auto text-center mt-3 ">
                  <a class="text-decoration-none text-color-dark  text-color-hover-primary font-weight-semibold text-2 "
                    href="/login">Already have an account</a>
                </div>
              </div>
            </div>
          </form>
                    
        </div>
      </div>
    </div>



</body>

</html>