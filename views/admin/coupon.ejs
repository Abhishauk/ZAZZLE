  console.log("hello");
  console.log(couponData);

  // Send a POST request to the server
  $.ajax({
    type: "POST",
    url: "/admin/add-coupon",
    data: couponData,
    success: function (response) {
      console.log(response);

      if (response.status === true) {
        // Show success message
        console.log("ghdgch");
        Swal.fire({
          position: 'center',
