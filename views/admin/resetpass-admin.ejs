<script>
  //regiser validation

  const resetForm = document.getElementById("reset-form");
//   const email = document.getElementById("email");
  const password1 = document.getElementById("password1");
  const password2 = document.getElementById("password2");

//   const emailRegX = /^\w+@[a-zA-Z_]+?\.[a-zA-Z]{2,3}$/;
  const passRegX = /^[a-zA-Z0-9!@#$%^&*()_+\-=[\]{};':"\\|,.<>/?]{6,}$/;

  resetForm.addEventListener("submit", (e) => {
    if (password1.value === "" || password1.value === null) {
      e.preventDefault();
      document.getElementById("password1Error").classList.remove("d-none");
      document.getElementById("password1Error").innerHTML =
        "password number must be filled!";r
    } else if (!password1.value.match(passRegX)) {
      e.preventDefault();
      document.getElementById("password1Error").classList.remove("d-none");
      document.getElementById("password1Error").innerHTML =
        "Password must contain at least 4 characters ";
    } else if (password1.value.match(passRegX)) {
      document.getElementById("password1Error").classList.remove("d-none");
      document.getElementById("password1Error").innerHTML = "";
    }

    if (password2.value === "" || password2.value === null) {
      e.preventDefault();
      document.getElementById("password2Error").classList.remove("d-none");
      document.getElementById("password2Error").innerHTML =
        "password number must be filled!";r
    } else if (!password2.value.match(passRegX)) {
      e.preventDefault();
      document.getElementById("password2Error").classList.remove("d-none");
      document.getElementById("password2Error").innerHTML =
        "Password must contain at least 4 characters ";
    } else if (password2.value.match(passRegX)) {
      document.getElementById("password2Error").classList.remove("d-none");
      document.getElementById("password2Error").innerHTML = "";
    }
    if (password1.value !== password2.value) {
      e.preventDefault();
      document.getElementById("password2Error").classList.remove("d-none");
      document.getElementById("password2Error").innerHTML =
        "Passwords do not match!";
    } else {
      document.getElementById("password2Error").classList.remove("d-none");
      document.getElementById("password2Error").innerHTML = "";
    }
 
  });
</script>
