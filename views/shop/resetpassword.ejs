<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>Zazzle</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <style>
        .card-body {
            padding: 4rem 2rem;
        }
        .card-img {
            border-radius: 1rem 0 0 1rem;
            max-width: 100%;
            height: auto;
        }
        .login-form-container {
            display: flex;
            align-items: center;
        }
        .form-label {
    margin-bottom: 0.5rem;
    margin-top: 10px;
}
    </style>
</head>
<%-include('../partials/userheader')-%>
<body>
    <section style="background-color: #e4e4e4;">
        <div class="container py-5">
          <div class="row justify-content-center">
            <div class="col-md-8 col-lg-8">
              <div class="card">
                <div class="row g-0">
                  <div class="col-md-6">
                    <img src="https://img.freepik.com/free-photo/beautiful-naked-woman-holds-fashion-handbag-posing-studio_186202-5860.jpg?w=360&t=st=1686839847~exp=1686840447~hmac=ad220ab3007588300c2bbdd9e2ca8f953ba7d60e4be62766b0c49b59f7ffcc43"
                      alt="login form" class="card-img" />
                  </div>
                  <div class="col-md-6">
                    <div class="card-body">
      
                        <form
                        action="/resetpasspost/<%=user1._id%>"
                        id="reset-form"
                        method="post"
                        class="needs-validation"
                      >
      
                        <div class="d-flex align-items-center mb-3 pb-1">
                          <span class="h1 fw-bold mb-0">Reset Password</span>
                        </div>
      
                        <!-- <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign into your account</h5> -->
                       
      
                        <div class="form-outline mb-4">
                            <label class="form-label text-color-dark text-3"
                    >Password <span class="text-color-danger">*</span></label
                  >
                  <input
                    type="password1"
                    value=""
                    class="form-control form-control-lg text-4"
                    name="password"
                    id="password1"
                  />
                  <span
                    class="text-danger d-none"
                    style="font-size: 12px; margin-left: 10px"
                    id="password1Error"
                  ></span>
                        </div>
                        <div class="form-outline mb-4">
                            <label class="form-label text-color-dark text-3"
                            >Confirm Password <span class="text-color-danger">*</span></label
                          >
                          <input
                            type="password2"
                            value=""
                            class="form-control form-control-lg text-4"
                            id="password2"
                          />
                          <span
                            class="text-danger d-none"
                            style="font-size: 12px; margin-left: 10px"
                            id="password2Error"
                          ></span>
                        </div>
                
                        <!-- <a class="small text-muted" href="/forgotpassword">Forgot password?</a> -->
                        <div class="pt-1 mb-4">
                          <button class="btn btn-dark btn-lg btn-block" type="submit">Reset Password</button>
                        </div>
                        
                       
                        <a class="small text-muted"  href="/signup"
                        >New to Zazzle? Create an account</a>
                        <!-- <p class="mb-5 pb-lg-2" style="color: #393f81;">Don't have an account? <a href="/signup" style="color: #393f81;">Register here</a></p>
                        <a href="#!" class="small text-muted">Terms of use.</a>
                        <a href="#!" class="small text-muted">Privacy policy</a> -->
                        
                      </form>
      
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
</body>
<%-include('../partials/userfooter')-%>
<script>
  //regiser validation

  const resetForm = document.getElementById("reset-form");
//   const email = document.getElementById("email");
  const password1 = document.getElementById("password1");
  const password2 = document.getElementById("password2");

//   const emailRegX = /^\w+@[a-zA-Z_]+?\.[a-zA-Z]{2,3}$/;
  const passRegX = /^[a-zA-Z0-9!@#$%^&*()_+\-=[\]{};':"\\|,.<>/?]{6,}$/;

  resetForm.addEventListener("submit", (e) => {
    if (password1.value === "" || password1.value === null) {
      e.preventDefault();
      document.getElementById("password1Error").classList.remove("d-none");
      document.getElementById("password1Error").innerHTML =
        "password number must be filled!";r
    } else if (!password1.value.match(passRegX)) {
      e.preventDefault();
      document.getElementById("password1Error").classList.remove("d-none");
      document.getElementById("password1Error").innerHTML =
        "Password must contain at least 4 characters ";
    } else if (password1.value.match(passRegX)) {
      document.getElementById("password1Error").classList.remove("d-none");
      document.getElementById("password1Error").innerHTML = "";
    }

    if (password2.value === "" || password2.value === null) {
      e.preventDefault();
      document.getElementById("password2Error").classList.remove("d-none");
      document.getElementById("password2Error").innerHTML =
        "password number must be filled!";r
    } else if (!password2.value.match(passRegX)) {
      e.preventDefault();
      document.getElementById("password2Error").classList.remove("d-none");
      document.getElementById("password2Error").innerHTML =
        "Password must contain at least 4 characters ";
    } else if (password2.value.match(passRegX)) {
      document.getElementById("password2Error").classList.remove("d-none");
      document.getElementById("password2Error").innerHTML = "";
    }
    if (password1.value !== password2.value) {
      e.preventDefault();
      document.getElementById("password2Error").classList.remove("d-none");
      document.getElementById("password2Error").innerHTML =
        "Passwords do not match!";
    } else {
      document.getElementById("password2Error").classList.remove("d-none");
      document.getElementById("password2Error").innerHTML = "";
    }
 
  });
</script>
